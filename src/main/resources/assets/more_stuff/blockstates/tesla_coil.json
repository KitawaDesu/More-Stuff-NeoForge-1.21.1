{
  "multipart": [
    {
      "when": { "top": "true" },
      "apply": { "model": "more_stuff:block/tesla_coil_top" }
    },
    {
      "when": { "top": "false" },
      "apply": { "model": "more_stuff:block/tesla_coil_bottom" }
    },
    {
      "when": { "top": "false", "has_charge": "true" },
      "apply": { "model": "more_stuff:block/tesla_coil_bottom_charge" }
    }
  ]
}